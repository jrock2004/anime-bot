{
  "name": "anime-bot",
  "version": "1.0.0",
  "description": "A bot for Slack and Mattermost to look up anime",
  "main": "functions/server.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --format stylish",
    "build": "run-s compile:tsc compile:lambda",
    "compile:tsc": "tsc",
    "compile:lambda": "netlify-lambda build functions",
    "serve": "ts-node src/server.ts",
    "local": "NODE_ENV=dev TOKEN=9999 nodemon",
    "start": "NODE_ENV=dev TOKEN=9999 netlify-lambda serve functions",
    "version:bump": "standard-version",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrock2004/anime-bot.git"
  },
  "keywords": [
    "anime",
    "slack",
    "mattermost"
  ],
  "author": "jrock2004",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jrock2004/anime-bot/issues"
  },
  "homepage": "https://github.com/jrock2004/anime-bot#readme",
  "dependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "compression": "^1.7.4",
    "@types/uuid": "^8.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^3.0.0",
    "moment": "^2.29.1",
    "serverless-http": "^2.7.0",
    "standard-version": "^9.2.0",
    "string-strip-html": "^8.2.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/http-status-codes": "^1.2.0",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^14.14.41",
    "encoding": "^0.1.13",
    "eslint": "^7.25.0",
    "eslint-plugin-node": "^11.1.0",
    "http-status-codes": "^2.1.4",
    "husky": "^6.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "netlify-lambda": "^2.0.5",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.4"
  },
  "proxy": {
    "/.netlify/functions": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/functions": ""
      }
    }
  },
  "engines": {
    "node": ">13.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
